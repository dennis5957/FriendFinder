<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <div class="row">
            <div class="col-9">
                <h1 class="display-3">Eat-Da-Burger</h1>
                <p class="lead">If you love burgers, then this is the place for you</p>
                <hr class="my-4">
                <p>Add and Devour Burgers</p>
            </div>
            <div class="col-3">
                <img class="header-burger" src="/assets/img/header-burger.png" alt="" />
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-3">
            <ul class="burger-list">
                {{#each burgers}} {{#unless devoured}} {{> burger }} {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <div class="container shadow-lg p-3 mb-5 bg-light rounded raise-up">
                <h2>Add a Burger</h2>
                <form class="create-form">
                    <div class="form-group">
                        <input type="text" id="bn" name="name" class="form-control" placeholder="Enter your favorite burger..." required>
                    </div>
                    <button type="submit" class="btn btn-secondary">Add Burger</button>
                </form>
            </div>
        </div>
        <div class="col-3">
            <ul class="burger-list_devoured">
                <button class="clear-button btn btn-outline-dark  mb-2" type="button">CLear Devoured Burgers</button>
                {{#each burgers}} {{#if devoured}} {{> burger }} {{/if}} {{/each}}
            </ul>
        </div>
    </div>
</div>